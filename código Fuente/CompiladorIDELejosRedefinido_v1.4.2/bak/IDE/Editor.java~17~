  void programas_componentRemoved(ContainerEvent e) {
    if(programas.getComponentCount()>0){  // Ubicar el Focus del programa
      Programa temp;
      temp = (Programa) programas.getSelectedComponent();
      temp.setFocusCodigo();
    }
  }

  void programas_componentShown(ComponentEvent e) {
